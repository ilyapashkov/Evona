header(:class="[ active ? 'header header_scroll' : 'header' ]")
	div.header__overlay
	div.header-bg
		video.header-bg__video(poster="./assets/images/screen.jpg" autoplay muted loop="" preload="none")
			source(src="./assets/video/video.mp4" type="video/mp4")
	div.header-top
		div.container
			div.row
				div.col-4.header-top__left
					div.header-hamburger
						span.header-hamburger__line
						span.header-hamburger__line
						span.header-hamburger__line
					a.header__phone(href="tel:+74951090459") + 7 495
						=" "
						b 109-04-59
					button.button.button_primary.header__button.js-popupShow(type='button' @click="showPopupCallback()") Заказать звонок
				div.col-4.header-top__center
					div.header-logo
						a.header-logo__item(href="./index.html")
							+svgIcon(170, 38, 'header-logo__icon header-logo__icon_evona', '#evona_white')
						a.header-logo__item(href="./index.html")
							+svgIcon(190, 54, 'header-logo__icon header-logo__icon_nysense', '#nysense_white')
				div.col-4.header-top__right
						a.button.button_primary.header__button.header__button_b2b(href="./b2b.html") B2B
						div.header-languages
							a.header-languages__link.header-languages__link_active(href="javascript:void(0)") RU
							a.header-languages__link(href="javascript:void(0)") EN
			div.row
				div.col
					div.header-menu
						a.header-menu__link(href="javascript:void(0)") О брендах
						a.header-menu__link(href="javascript:void(0)") Lookbook
						a.header-menu__link(href="javascript:void(0)") Коллекции
				div.col
					div.header-menu.header-menu_center
						a.header-menu__link(href="javascript:void(0)") Сотрудничество
				div.col
					div.header-menu
						a.header-menu__link(href="javascript:void(0)") Вакансии
						a.header-menu__link(href="javascript:void(0)") Блог
						a.header-menu__link(href="javascript:void(0)") Контакты





	div.header-content
		div.container
			div.row
				div.col-12
					h1.header-content__title
						| Официальный дистрибьютор брендов
						br
						| Evona, Nysense Paris
						br
						| в России и СНГ

			div.row
				div.col-12.d-flex.align-items-center.justify-content-center
					a.header-download(href="#")
						+svgIcon(42, 64, 'header-download__icon', '#download')
						div.header-download__content
							span.header-download__title Скачать презентацию
							span.header-download__text PDF
								i.header-download__spacer
								| 5 Mb

	div.header-bottom
		div.container
			div.row
				div.col-4
					div.social.header-social
						a.social__link.social__link_insta(href="#")
							+svgIcon(54, 54, 'social__icon', '#instagram')
						a.social__link.social__link_fb(href="#")
							+svgIcon(54, 54, 'social__icon', '#facebook')
						a.social__link.social__link_ytb(href="#")
							+svgIcon(54, 54, 'social__icon', '#youtube')

				div.col-4.d-flex.align-items-center.justify-content-center
					button.header__scroll.js-scroll(type='button')
						+svgIcon(54, 54, 'social__icon', '#arrow-double')